{
    "name": "simple-gpt",
    "private": true,
    "version": "1.0.0",
    "description": "一个简单的 GPT 聊天机器人",
    "author": "Kris <chenjinwen77@gmail.com> https://www.krissarea.com",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint --fix src",
        "lint:all": "eslint --fix .",
        "prettier": "prettier src --write",
        "prettier:all": "prettier . --write",
        "prepare": "husky install",
        "lint-staged": "lint-staged",
        "commit": "git-cz",
        "cz": "git add . && pnpm run commit && git push",
        "changeset": "changeset",
        "version": "changeset version",
        "release": "changeset publish",
        "stylelint": "stylelint \"src/**/*.{css,scss,less}\"",
        "stylelint:fix": "stylelint \"src/**/*.{css,scss,less}\" --fix"
    },
    "dependencies": {
        "@emotion/react": "^11.13.5",
